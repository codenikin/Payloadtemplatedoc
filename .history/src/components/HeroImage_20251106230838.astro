---
import type { Props } from "@astrojs/starlight/props";

interface ImageProps {
  src: string;
  alt?: string;
}

const { src, alt = "Hero image" } = Astro.props as ImageProps;
---

<img src={src} alt={alt} class="hero-image" />

<style>
  img {
    max-width: 100%;
    height: auto;
  }
</style>
